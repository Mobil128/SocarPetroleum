<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TableActivity">


    <RelativeLayout
        android:id="@+id/hhhy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".TableActivity">

        <LinearLayout
            android:id="@+id/scr"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="#D8E6DC"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#2A804D"

                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Duzelt"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Saxla"
                    app:srcCompat="@android:drawable/ic_menu_save" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="Ynn"
                    app:srcCompat="@android:drawable/ic_popup_sync" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:isScrollContainer="false"
                    android:onClick="User"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@mipmap/avatar_icon1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YDM :"
                    android:textColor="#150707"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ydm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#150707"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarix :"
                    android:textColor="#150707"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Tarix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#150707"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ölcü aparan şəxs :"
                    android:textColor="#150707"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/olcu_sexs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#150707"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:textSize="14dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#2A804D"
                    android:textSize="14dp"

                    android:textStyle="bold|italic" />

                <TextView

                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Marka"
                    android:textColor="#2A804D"
                    android:textSize="14dp"
                    android:textStyle="bold|italic" />

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:ems="10"

                    android:text="Səviyə"
                    android:textColor="#2A804D"
                    android:textSize="14dp"
                    android:textStyle="bold|italic" />

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Litr"
                    android:textColor="#2A804D"
                    android:textSize="14dp"
                    android:textStyle="bold|italic" />

                <TextView

                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cəmi"
                    android:textColor="#E80618"
                    android:textSize="14dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:background="#D8E6DC"
            android:id="@+id/sc1"
            android:layout_width="match_parent"
            android:layout_height="557dp"
            android:layout_below="@+id/scr"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lv_tanker"

                    android:layout_width="match_parent"
                    android:layout_height="556dp"
                    android:layout_marginTop="10dp">

                </ListView>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="#2A804D"
            android:onClick="direkSend"
            android:text="Rəisə göndər"
            android:textColor="#EDE9E9"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>